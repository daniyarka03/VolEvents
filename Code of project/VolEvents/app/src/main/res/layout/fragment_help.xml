                        android:layout_marginLeft="20dp"
                        android:textSize="26sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@id/help__text_10"
                        android:fontFamily="@font/darker_grotesque"

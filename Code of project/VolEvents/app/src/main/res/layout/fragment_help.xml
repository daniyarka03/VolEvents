                <TextView
                    android:id="@+id/help__title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Help"
                    android:fontFamily="@font/darker_grotesque"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="30sp"
                     />

                <ImageView
                    android:id="@+id/help_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_idea"
                    android:layout_below="@+id/help__title"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/app_use"
                    android:text="How to use app"
                    android:fontFamily="@font/darker_grotesque"
                    android:layout_below="@+id/help_img"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="30sp"
                    android:gravity="center_horizontal" />



                <RelativeLayout
                    android:id="@+id/help_block_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_use"
                    android:background="@drawable/yellow_solid_button"
                    android:layout_marginTop="50dp">


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEditPassword">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A826"
                android:paddingBottom="80dp">

                <TextView
                    android:id="@+id/password__title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/darker_grotesque"
                    android:text="Change basic information"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/password__email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />


                <ImageView
                    android:id="@+id/password__img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_authentication"
                    android:layout_below="@id/password__title"
                    android:layout_marginTop="80dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password__current_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="26dp"
                    android:backgroundTint="#D8D8D8"
                    android:fontFamily="@font/darker_grotesque"
                    android:hint="Current password"
                    android:inputType="textPassword"
                    android:paddingBottom="18dp" />

                <EditText
                    android:id="@+id/password__new_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password__current_field"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="26dp"
                    android:backgroundTint="#D8D8D8"
                    android:fontFamily="@font/darker_grotesque"
                    android:hint="New password"
                    android:inputType="textPassword"
                    android:paddingBottom="18dp" />

                <Button
                    android:id="@+id/password__change_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password__new_field"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/yellow_solid_button"
                    android:fontFamily="@font/darker_grotesque"
                    android:text="Change"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/password__cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password__change_button"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/event_name__button_form_red"
                    android:fontFamily="@font/darker_grotesque"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="26sp" />



            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
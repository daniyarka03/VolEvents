<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEditEmail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#536DFE"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/email__title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/darker_grotesque"
                android:text="Change basic information"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/email__img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_change_email"
                android:layout_below="@id/email__title"
                android:layout_marginTop="40dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/email__new_email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="26dp"
                android:backgroundTint="#D8D8D8"
                android:fontFamily="@font/darker_grotesque"
                android:hint="E-mail"
                android:paddingBottom="18dp" />

            <Button
                android:id="@+id/email__change_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email__new_email_field"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/formal_solid_button"
                android:fontFamily="@font/darker_grotesque"
                android:text="Change"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />

            <Button
                android:id="@+id/email__cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email__change_button"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/event_name__button_form_red"
                android:fontFamily="@font/darker_grotesque"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />



        </RelativeLayout>

    </LinearLayout>
    </ScrollView>




</RelativeLayout>